            {
                "Name": "max_tfactor",
                "Type": "int",
                "Values": "[10]",
                "Default": 1
            },
            {
                "Name": "loop_unroll_factor_t",
                "Type": "int",
                "Values": "[i for i in range(1, 10+1)]",
                "Default": 2
            },
            {
                "Name": "sh_power",
                "Type": "int",
                "Values": "[0, 1]",
                "Default": 1
