            {
                "Name": "blocks_per_sm",
                "Type": "int",
                "Values": "[0, 1, 2, 3, 4]",
                "Default": 1
            }
        ],
        "Conditions": [
            {
                "Expression": "block_size_x*block_size_y>= 32",
                "Parameters": [
                    "block_size_x",
                    "block_size_y"
                ]
            },
            {
                "Expression": "temporal_tiling_factor % loop_unroll_factor_t == 0",
                "Parameters": [
                    "temporal_tiling_factor",
                    "loop_unroll_factor_t"
                ]
            },
            {
                "Expression": "block_size_x*block_size_y <= 1024",
                "Parameters": [
                    "block_size_x",
                    "block_size_y"
                ]
            },
            {
                "Expression": "(block_size_x*tile_size_x+ temporal_tiling_factor * 2) * (block_size_y*tile_size_y+ temporal_tiling_factor * 2) * (2+sh_power) * 4 <= 49152",
                "Parameters": [
                    "block_size_x",
                    "tile_size_x",
                    "temporal_tiling_factor",
                    "block_size_y",
                    "tile_size_y",
                    "sh_power"
                ]
            },
            {
                "Expression": "blocks_per_sm == 0 or (((block_size_x*tile_size_x + temporal_tiling_factor * 2) * (block_size_y*tile_size_y + temporal_tiling_factor * 2) * (2+sh_power) * 4) * blocks_per_sm <= 102400)",
                "Parameters": [
                    "blocks_per_sm",
                    "block_size_x",
                    "tile_size_x",
                    "temporal_tiling_factor",
                    "block_size_y",
                    "tile_size_y",
                    "sh_power"
                ]
            }
        ]
    },
